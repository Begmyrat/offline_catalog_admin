<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:text="Sanawa goş"/>

            <Spinner
                android:id="@+id/s_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/r_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Gyz"/>

                <RadioButton
                    android:id="@+id/r_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oglan"/>

            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Öndüriji şereket">

                <EditText
                    android:id="@+id/e_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Önüm ady">

                <EditText
                    android:id="@+id/e_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Önüm hakynda">

                <EditText
                    android:id="@+id/e_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Bahasy">

                <EditText
                    android:id="@+id/e_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Ölçegler">

                <EditText
                    android:id="@+id/e_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/i_image1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:minHeight="100dp"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_camera_24" />

                <ImageView
                    android:id="@+id/i_image2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:minHeight="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_camera_24"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/i_image3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:minHeight="100dp"
                    android:maxHeight="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_camera_24"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/i_image4"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:minHeight="100dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/ic_baseline_camera_24"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/i_image5"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:minHeight="100dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/ic_baseline_camera_24"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/i_image6"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:minHeight="100dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/ic_baseline_camera_24"
                    android:layout_weight="1"/>

            </LinearLayout>

            <Button
                android:id="@+id/b_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tassykla"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>